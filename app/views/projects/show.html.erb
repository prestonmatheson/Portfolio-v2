<div class="container portfolio-container">
  <%= render "shared/navbar" %>
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <h4><span class="tech">Technologies Used: </span><em><%= @portfolio_item.subtitle %></em></h4>

      <p><%= @portfolio_item.body %></p>

      <% if logged_in?(:site_admin) %> 
        <div class="col-md-12">
          <%= link_to "Edit Item", edit_project_path(@portfolio_item), class: 'btn btn-warning' %>
        </div>
      <%end%>
    </div>
  </div>
</div>